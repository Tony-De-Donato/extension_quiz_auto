{
  "manifest_version": 3,
  "name": "Auto-fill Quiz Creator",
  "version": "1.0",
  "description": "Remplit un quiz depuis un JSON en ligne ou un fichier local",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://ton-site.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://TONSITEQUIZ.com/create*"],
      "js": ["content.js"]
    }
  ]
}
